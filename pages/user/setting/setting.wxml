      <input class='input' name='nickName' placeholder='请输入昵称' placeholder-class='nickNameInputCls' value='{{userInfo.nickName}}'/>

  </view>
  </view>

  <view class='nickNameView'>
  <view class='nickName'>个人签名:
      <input class='input' name='signature' placeholder='请输入个人签名' placeholder-class='nickNameInputCls' value="{{userInfo.signature}}"/>

  </view>
  </view>

  <view class='nickNameView'>
  <view class='nickName'>性别:
      <input class='input' name='sex' placeholder='请输入性别' placeholder-class='nickNameInputCls' value="{{userInfo.sex}}"/>

  </view>
  </view>

  <view class='nickNameView'>
  <view class='nickName'>个人生日:
      <input 
       class='input'
       name='birthday'
