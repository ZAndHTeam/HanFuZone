      <textarea 
         bindinput='textChange'
         focus="{{releaseFocus}}"
         class='cf-content'
         fixed='true' 
         placeholder='我要评论' 
         catchtap='clickSubmitView'>
        </textarea>
        <text class='cf-send' bindtap='sendComment'>发送</text>
    <!-- </view> -->
   </view>
</view>    